<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.quizapp.MainActivity"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:background="@drawable/apple1"
    android:layout_width="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_header"
            android:gravity="center"
            android:textSize="60sp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_of_questions"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginRight="20dp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/question_1"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>
        <RadioGroup
            android:id="@+id/question_1_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">
        <RadioButton
            android:id="@+id/question_1_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_1_option_1"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/question_1_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_1_option_2"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/question_1_radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_1_option_3"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/question_1_radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_1_option_4"
            android:textSize="18sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="22sp"/>
        <RadioGroup
            android:id="@+id/question_2_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">
        <RadioButton
            android:id="@+id/question_2_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_2_option_1"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/question_2_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_2_option_2"
            android:textSize="18sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_3"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/question_3_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">
        <RadioButton
            android:id="@+id/question_3_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_3_option_1"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/question_3_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_3_option_2"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/question_3_radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_3_option_3"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/question_3_radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_3_option_4"
            android:textSize="18sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_4"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="22sp" />
        <CheckBox
            android:id="@+id/question_4_check_box_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_4_option_1"
            android:layout_marginLeft="16dp"
        android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/question_4_check_box_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_4_option_2"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"/>
        <CheckBox
            android:id="@+id/question_4_check_box_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_4_option_3"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"/>
        <CheckBox
            android:id="@+id/question_4_check_box_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_4_option_4"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_5"
            android:layout_marginTop="8dp"
            android:textSize="22sp" />
        <EditText
            android:id="@+id/question_5_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q6 - "
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/question_question_6_edit_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_6"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_name"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:onClick="submitQuiz"/>
    </LinearLayout>
</ScrollView>
